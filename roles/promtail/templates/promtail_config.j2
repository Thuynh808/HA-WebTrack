server:
  http_listen_port: 9080
  grpc_listen_port: 0

positions:
  filename: /tmp/positions.yaml  # Keeps track of where Promtail left off in each log

clients:
  - url: http://192.168.68.90:3100/loki/api/v1/push  # Change this if your Loki server is remote

scrape_configs:
  - job_name: system_logs
    static_configs:
    - targets:
        - localhost
      labels:
        job: messages
        __path__: /var/log/messages  # System messages log

  - job_name: secure_logs
    static_configs:
    - targets:
        - localhost
      labels:
        job: secure
        __path__: /var/log/secure  # Authentication and security logs

  - job_name: haproxy_logs
    static_configs:
    - targets:
        - localhost
      labels:
        job: haproxy
        __path__: /var/log/haproxy.log  # HAProxy log file



